<% if object.errors.any? %>
  <div class="error_explanation">
    <div class="alert alert-danger">
      <%= "#{"Số thông báo lỗi: "}#{pluralize(object.errors.count, "")}" %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= "#{msg}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
