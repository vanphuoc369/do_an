<% provide(:title, "Quên mật khẩu") %>

<div class="container">
  <div class="box-wrapper">
    <div class="box box-border">
      <div class="box-body">
        <h4>Quên mật khẩu</h4>
        <%= form_for(:password, url: passwords_path) do |f| %>
          <hr>

          <div class="form-group">
            <%= f.label :email, "Địa chỉ Email:" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-group text-right">
            <%= f.submit "Gửi yêu cầu", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
