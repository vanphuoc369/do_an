<h6>Chỉnh sửa bình luận của bạn:</h6>
<%= form_for [@book, @review, @comment], html: {class: "form-horizontal content_cmt"}, remote: true do |f| %>
  <div class="item style_comment" style="padding: 0px; border: none;">
    <div class="user cmt">
      <figure>
        <%= gravatar_for current_user %>
      </figure>
      <div class="details" style="padding: 0 9px; margin-left: 55px;">
        <div class = "control-group">
          <%= f.text_area :content, require: true, id: "edit-comment", placeholder: "Nhập nội dung bình luận ..." %>
        </div>
        <%= f.submit "Cập nhật bình luận", class: "btn btn-success button_submit" %>
        <%= f.submit "Hủy bỏ", class: "btn btn-success button_submit cancel" %>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $("#edit-comment").on('input', function() {
    var scroll_height = $("#edit-comment").get(0).scrollHeight;

    $("#edit-comment").css('height', scroll_height + 'px');
  });
</script>
