<% if logged_in? %>
  <li class="nav-item dropdown">
    <a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false"> <img src="/assets/logo.png" alt="user-img" width="36" class="img-circle"><span ><%= current_user.full_name %></span></span> </a>
    <ul class="dropdown-menu dropdown-user">
      <li>
        <div class="user-box">
          <div class="u-img"><img src="/assets/logo.png" alt="user"></div>
          <div class="u-text">
            <h4><%= current_user.full_name %></h4>
            <p class="text-muted"><%= current_user.email %></p>
            <%= link_to user_path(current_user.id), class: "btn btn-rounded btn-danger btn-sm", method: :get do %>
                Xem thông tin
            <% end %>
          </div>
        </div>
      </li>
      <div class="dropdown-divider"></div>
      <a class="dropdown-item icon" href="#"><i class="fa fa-power-off"></i> Đăng xuất</a>
    </ul>
  </li>
<% end %>
