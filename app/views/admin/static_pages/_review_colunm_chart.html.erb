<div class="col-md-6">
  <div id="chartContainer" style="height: 380px; width: 100%;"></div>
  <script type="text/javascript">
    window.onload = function () {
      var chart = new CanvasJS.Chart("chartContainer",
        {
          title:{
            text: "Tổng đánh giá theo tháng năm " + "<%= @year %>"
          },
          data: [
            {
              dataPoints: [
                { x: 1, y: <%= @result_array[0] %>, label: "Tháng 1"},
                { x: 2, y: <%= @result_array[1] %>, label: "Tháng 2" },
                { x: 3, y: <%= @result_array[2] %>, label: "Tháng 3"},
                { x: 4, y: <%= @result_array[3] %>, label: "Tháng 4"},
                { x: 5, y: <%= @result_array[4] %>, label: "Tháng 5"},
                { x: 6, y: <%= @result_array[5] %>, label: "Tháng 6"},
                { x: 7, y: <%= @result_array[6] %>, label: "Tháng 7"},
                { x: 8, y: <%= @result_array[7] %>, label: "Tháng 8"},
                { x: 9, y: <%= @result_array[8] %>, label: "Tháng 9"},
                { x: 10, y: <%= @result_array[9] %>, label: "Tháng 10"},
                { x: 11, y: <%= @result_array[10] %>, label: "Tháng 11"},
                { x: 12, y: <%= @result_array[11] %>, label: "Tháng 12"}]
              }]
        });
      chart.render();
    }
  </script>
</div>
